<decorators defaultdir="/WEB-INF/freemarker/decorators">
    <!-- Any urls that are excluded will never be decorated by Sitemesh -->
    <excludes>
        <pattern>/static/*</pattern>
        <pattern>/cas/*</pattern>
        <pattern>/Uploads/*</pattern>
        <pattern>/**/ajax/**</pattern>
        <pattern>/**/**/ajax/**</pattern>
        <pattern>/home/**/index/*</pattern>
        <pattern>/home/product/**</pattern>
    </excludes>
    <decorator name="bo_main" page="bo/main.ftl">
        <pattern>/bo/*</pattern>
        <pattern>/bo</pattern>
    </decorator>
    <decorator name="home_main" page="home/main.ftl">
        <pattern>/home/*</pattern>
    </decorator>
    <decorator name="base" page="home/main.ftl">
        <pattern>/</pattern>
    </decorator>
</decorators>